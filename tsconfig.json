{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSources": true,
    "target": "es2017",
    "strict": true,
    "sourceRoot": "src",
    "outDir": "output",
    "sourceMap": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}